! For i3 WM make left Alt mod key
clear Mod3
remove Mod1 = Alt_L
add Mod3 = Alt_L
! Swap Caps_Lock and Control_L
remove Lock = Caps_Lock
remove Control = Control_L
remove Mod4 = Super_L
keysym Control_L = Caps_Lock
keysym Super_L = Control_L
add Lock = Caps_Lock
add Control = Control_L
add Control = Super_L

